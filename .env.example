# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# -----------------------------------------------------------------------------
# Database Configuration (MySQL)
# -----------------------------------------------------------------------------
# For MySQL/MariaDB
DB_ENGINE=django.db.backends.mysql
DB_NAME=q4k_tutors
DB_USER=q4k_tutors
DB_PASSWORD=
DB_HOST=172.18.0.7
DB_PORT=3306

# Alternative database engines:
# SQLite (for development):
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3
# (leave other DB_* fields empty for SQLite)

# PostgreSQL:
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=quest4knowledge_db
# DB_USER=postgres_user
# DB_PASSWORD=postgres_password
# DB_HOST=localhost
# DB_PORT=5432

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
# Email backend - use the custom SSL backend or Django's default
EMAIL_BACKEND=utils.email_backend.SSLEmailBackend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend  # Standard backend
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend  # Console (development)

# SMTP Server Settings
EMAIL_HOST=smtp-relay.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False

# Email Authentication
EMAIL_HOST_USER=tutors-agent@quest4knowledge.co.za
EMAIL_HOST_PASSWORD=your-email-app-password-here
DEFAULT_FROM_EMAIL=tutors-agent@quest4knowledge.co.za

# SSL Certificate Configuration (optional)
EMAIL_SSL_CERTFILE=
EMAIL_SSL_KEYFILE=

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
# URL of the frontend application (used in email templates)
FRONTEND_URL=http://localhost:5174

# Digital Samba Configuration
DIGITAL_SAMBA_TEAM_ID=
DIGITAL_SAMBA_DEVELOPER_KEY=
